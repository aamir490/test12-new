# Go to NODE-1 && NODE-2 ::---
[root@NODE-1 ~]# yum install vim -y
[root@NODE-1 ~]# vim /etc/ssh/sshd_config
                  PasswordAuthentication yes , PermitRootLogin yes

[root@NODE-1 ~]# systemctl restart sshd
[root@NODE-1 ~]# passwd root   --> aamir
[root@NODE-1 ~]# cd /etc/ssh/sshd_config.d/
[root@NODE-1 sshd_config.d]#  vim 50-cloud-init.conf
                               PasswordAuthentication yes
[root@NODE-1 sshd_config.d]# systemctl restart sshd
                             



[root@NODE-1 ~]# yum install vim -y
[root@NODE-2 ~]# vim /etc/ssh/sshd_config
                  PasswordAuthentication yes , PermitRootLogin yes

[root@NODE-2 ~]# systemctl restart sshd
[root@NODE-2 ~]# passwd root    --> aamir
[root@NODE-2 ~]# cd /etc/ssh/sshd_config.d/
[root@NODE-2 sshd_config.d]#  vim 50-cloud-init.conf
                               PasswordAuthentication yes
[root@NODE-2 sshd_config.d]# systemctl restart sshd





# On master node :--
# Default ansible config file = vim  /etc/ansible/ansible.cfg
[root@ANSIBLE-SERVER ~]# vim /etc/ansible/ansible.cfg
    COPY -->   ansible-config init --disabled -t all > /etc/ansible/ansible.cfg


[root@ANSIBLE-SERVER ~]# ansible-config init --disabled -t all > /etc/ansible/ansible.cfg

[root@ANSIBLE-SERVER ~]# vim /etc/ansible/ansible.cfg
                          host_key_checking=false   ( uncomment and false )

